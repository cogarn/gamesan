 for i,v in pairs(game.workspace:GetDescendants()) do
        if v:IsA("Part") and v.Parent.Name == 'Basket' then
            if v.Name == 'Net' then
                local aa = "Trig"
                v.Name = aa  
            end
        end
    end
    
    
    
    
    
    
    
    local Camera = workspace.CurrentCamera
    Holding = false
    function findGoals()
        for i, v in pairs(workspace:GetDescendants()) do
            if v.Name == 'Trig' then
                v.Parent = workspace
            end
        end
    end
    local function findClosestPart(position)
        local closestPart, closestPartMagnitude
        local tmpMagnitude
        for i, v in pairs(workspace:GetChildren()) do
            if v.Name == 'Trig' then
                if closestPart then
                    tmpMagnitude = (position - v.Position).magnitude
                    if tmpMagnitude < closestPartMagnitude then
                        closestPart = v
                        closestPartMagnitude = tmpMagnitude
                    end
                else
                    closestPart = v
                    closestPartMagnitude = (position - v.Position).magnitude
                end
            end
        end
        return closestPart
    end
    findGoals()
    local UIS = game:GetService('UserInputService')
    UIS.InputBegan:connect(function(Input, GPE)
        if not GPE and Input.KeyCode == Enum.KeyCode.X then
            local lookthat = findClosestPart(game.Players.LocalPlayer.Character.Torso.Position)
            Holding = true
            repeat
                wait(0.01)
                local A_1 = "shoot"
                local A_2 = lookthat.position + Vector3.new(0,40,0)
                    game:GetService("Workspace")[game.Players.LocalPlayer.Name].Ball.CSC:FireServer(A_1, A_2)
            until Holding == false
        end
    end)
    
    UIS.InputEnded:connect(function(Input, GPE)
        if not GPE and Input.KeyCode == Enum.KeyCode.X then
            Holding = false
        end
    end)
    
     I=0
